<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fitness.dense.densefitness.workouts.WorkoutDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/titleWrapper"
            android:layout_width="match_parent"
            android:layout_height="72dp">

            <EditText
                android:id="@+id/etWorkoutTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:paddingTop="8dp"
                android:hint="Title*" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/edWorkoutDate"
            android:paddingTop="8dp"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Date*"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/descriptionWrapper"
            android:paddingTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="72dp">

            <EditText
                android:id="@+id/etWorkoutDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:paddingTop="8dp"
                android:hint="Description"
                android:lines="4"
                android:inputType="textMultiLine" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkBoxWorkoutTime"
            android:paddingTop="16dp"
            android:gravity="center_vertical|center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/timeWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etWorkoutTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:paddingTop="8dp"
                android:hint="Time" />

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkBoxWorkoutRounds"
            android:gravity="center_vertical|center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/roundsWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etWorkoutRounds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Rounds" />

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkBoxWorkoutReps"
            android:gravity="center_vertical|center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/repsWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etWorkoutReps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Reps" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkBoxWorkoutWeight"
            android:gravity="center_vertical|center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/weightWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etWorkoutWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Weight" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* indicates required field"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</LinearLayout>
